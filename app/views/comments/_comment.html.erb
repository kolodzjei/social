<div class="container my-3 border-bottom">
  <div class="d-flex align-items-center">
    <%= image_tag comment.user.avatar.variant(:thumb), class: "rounded-circle me-3", alt: "User Avatar" %>
    <div>
      <h5 class="card-title mb-0"><%= link_to display_name(comment.user), user_path(comment.user), style: "color:black; text-decoration:none" %></h5>
      <p class="card-text"><small class="text-muted"><%= time_ago_in_words(comment.created_at) %> ago </small></p>
    </div>
    <div class="ms-auto">
    <%= link_to comment_path(comment), style:"color:black;text-decoration:none" do %>
      <span class="ms-2"><%= comment.replies_count %></span>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-chat" viewBox="0 0 16 16">
        <path d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z"/>
      </svg>
    <% end %>
      <%= render 'likes/like_form', model: comment %>
    <% if comment.user == current_user %>
          <%= link_to comment_path(comment), data:{"turbo-method": :delete}, style:"color:red; text-decoration:none" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
              <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
            </svg>
          <% end %>
        <% end %>
    </div>
  </div>
  <p class="my-2"><%= comment.content %></p>
</div>
