<% if user_signed_in? %>
  <div class="container">
    <div class="row">
      <div class="col-md-3 border-end">
        <!-- Left section -->
        <div class="d-flex align-items-start">
          <img src="https://via.placeholder.com/50" class="me-2" alt="User Avatar">
          <div>
            <h6><%= link_to(current_user.email, user_path(current_user), style:"color:black;text-decoration:none") %></h6>
            <%= form_with model: @post do |f| %>
              <%= f.text_area :content, class: "form-control mb-3", rows: "3", placeholder: "Write something..." %>
              <div class="d-flex justify-content-between">
                <div class="input-group">
                  <%= f.file_field :image, accept: "image/jpeg, image/jpg, image/png", class: "form-control", id: "inputGroupFile" %>
                </div>
                <%= f.submit "Post", class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-6 border-end">
        <!-- Middle section -->
        <%= render @posts %>
        <%== pagy_bootstrap_nav (@pagy) %>
      </div>
      <div class="col-md-3">
        <!-- Right section -->
        <div class="card mb-3">
          <div class="card-body d-flex align-items-start">
            <img src="https://via.placeholder.com/50" class="me-2" alt="Friend Avatar">
            <div>
              <h6>Friend Email</h6>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
<% end %>