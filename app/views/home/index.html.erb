<%= render 'shared/trix_helper' %>
<% if user_signed_in? %>
  <div class="container">
    <div class="row">
      <div class="col-md-3 border-end">
        <!-- Left section -->
        <div class="d-flex align-items-start">
          <%= image_tag current_user.avatar.variant(:thumb), class: "rounded-circle me-3", alt: "User Avatar" %>
          <div class="w-100">
            <h6><%= link_to( display_name(current_user), user_path(current_user), style:"color:black;text-decoration:none") %></h6>
            <%= form_with model: @post do |f| %>
              <%= f.rich_text_area :content, class: "form-control mb-3", rows: "3", placeholder: "Write something..." %>
              <div class="d-flex justify-content-between">
                
                
                <%= f.submit "Post", class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-6 border-end">
        <!-- Middle section -->
        <%= render @posts %>
        <%== pagy_bootstrap_nav (@pagy) %>
      </div>
      <div class="col-md-3">
        <!-- Right section -->
        <div class="card mb-3">
          <div class="card-body d-flex align-items-start">
            <img src="https://via.placeholder.com/50" class="me-2" alt="Friend Avatar">
            <div>
              <h6>Friend Email</h6>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
<% end %>