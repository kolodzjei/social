<% if user_signed_in? %>
  <div class="container">
    <div class="row">
      <div class="col-md-3 border-end">
        <!-- Left section -->
        <div class="d-flex align-items-start">
          <img src="https://via.placeholder.com/50" class="me-2" alt="User Avatar">
          <div>
            <h6><%= current_user.email %></h6>
            <form>
              <textarea class="form-control mb-3" rows="3" placeholder="Write something..."></textarea>
              <div class="d-flex justify-content-between">
                <div class="input-group">
                  <input type="file" class="form-control" id="inputGroupFile">
                  <label class="input-group-text" for="inputGroupFile"><i class="bi bi-paperclip"></i></label>
                </div>
                <button type="submit" class="btn btn-primary">Post</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="col-md-6 border-end">
        <!-- Middle section -->
        <%= render @posts %>
        <%== pagy_bootstrap_nav (@pagy) %>
      </div>
      <div class="col-md-3">
        <!-- Right section -->
        <div class="card mb-3">
          <div class="card-body d-flex align-items-start">
            <img src="https://via.placeholder.com/50" class="me-2" alt="Friend Avatar">
            <div>
              <h6>Friend Email</h6>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
<% end %>