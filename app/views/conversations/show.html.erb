<%= turbo_stream_from "conversation-#{@conversation.id}" %>

<div class="container">
  <div class="row">
    <div class="col-md-3 border-end">

    </div>
    <div class="col-md-6 border-end" data-controller="message">
      <div class="message-container" data-message-target="messages">
        <%= turbo_frame_tag "messages" do %>
          <%= render @messages %>
        <% end %>
      </div>
      <%= render 'messages/form', message: Message.new, conversation: @conversation %>
    </div>
    <div class="col-md-3">
      <%= render 'shared/side_bar' %>
    </div>
  </div>
</div>